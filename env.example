# Database Configuration
MONGODB_URI=mongodb://localhost:27017/innovation-hub
# or your MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/innovation-hub

# Authentication (NextAuth.js)
AUTH_SECRET=your-secret-key-here-generate-using-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-using-openssl-rand-base64-32

# Azure AD / Microsoft Entra ID Configuration
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# Email Notifications (Brevo / Sendinblue)
# Get your API key from https://app.brevo.com/settings/keys/api
# IMPORTANT: Key must start with "xkeysib-" and have transactional email permissions
BREVO_API_KEY=xkeysib-YOUR_API_KEY_HERE

# Email Configuration
# Email address where admin notifications will be sent
ADMIN_NOTIFICATION_EMAIL=admin@yourcompany.com

# Email address used as sender (MUST be verified in Brevo)
# This must be a verified sender in your Brevo account
# Go to https://app.brevo.com/settings/senders to verify your sender email
SENDER_EMAIL=noreply@yourcompany.com

# Optional: Additional recipient emails (comma-separated)
# ADDITIONAL_NOTIFICATION_EMAILS=team@yourcompany.com,manager@yourcompany.com

